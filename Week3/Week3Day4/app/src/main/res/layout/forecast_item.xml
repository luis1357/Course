<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <android.support.v7.widget.CardView
        android:id="@+id/cvMyCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:cardBackgroundColor="#87ffffff"
        tools:style="@style/CardView">

        <RelativeLayout
            android:id="@+id/rlRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivForeIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/w01" />

            <TextView
                android:id="@+id/lblForeHigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/ivForeIcon"
                android:text="@string/high"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/lblForeLow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblForeHigh"
                android:layout_toEndOf="@+id/ivForeIcon"
                android:text="@string/low"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvForeHigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/lblForeHigh"
                android:text="@string/textview"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvForeLow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblForeHigh"
                android:layout_toEndOf="@+id/lblForeLow"
                android:text="@string/textview"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvCelcius"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/tvForeHigh"
                android:text="@string/c"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvLowC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblForeHigh"
                android:layout_toEndOf="@+id/tvForeLow"
                android:text="@string/c"
                android:textSize="18sp" />

        </RelativeLayout>




    </android.support.v7.widget.CardView>
</RelativeLayout>