<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/back">


    <ImageView
        android:id="@+id/ivZooLogo"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/detroit_zoo"
        app:srcCompat="@drawable/detroit_zoo_banner" />

    <TextView
        android:id="@+id/tvZooDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivZooLogo"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:text="@string/Detroit_Zoo"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="15sp"
        android:typeface="normal"
        android:background="#9effffff"/>

    <Button
        android:id="@+id/btnGoToCat"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvZooDescription"
        android:layout_centerHorizontal="true"
        android:background="#e73b3b"
        android:text="@string/go_to_categories"
        android:onClick="GoToCategories"/>
</RelativeLayout>