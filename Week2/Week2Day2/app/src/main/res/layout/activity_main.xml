<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/week_2_daily_2"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/SubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Title"
        android:layout_centerHorizontal="true"
        android:text="@string/sqlite_excercise" />

    <EditText
        android:id="@+id/etGenre"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etYear"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="@string/genre"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etYear"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etAuthor"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="@string/year"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etAuthor"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etBookName"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="@string/author"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etBookName"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SubTitle"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="@string/book_name"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etGenre"
        android:layout_centerHorizontal="true"
        android:text="@string/add_new_book"
        android:onClick="AddNewBook"/>

    <Button
        android:id="@+id/btnGoToList"
        android:layout_width="241dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAdd"
        android:layout_centerHorizontal="true"
        android:onClick="GoToTable"
        android:text="@string/go_to_list" />
</RelativeLayout>