<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lblAddCar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/add_a_new_car"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etCarModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblAddCar"
        android:ems="10"
        android:hint="@string/enter_car_model"
        android:inputType="textCapCharacters|textPersonName" />

    <EditText
        android:id="@+id/etType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etCarModel"
        android:ems="10"
        android:hint="@string/type"
        android:inputType="textCapWords|textPersonName" />

    <EditText
        android:id="@+id/etYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etType"
        android:ems="10"
        android:hint="@string/year"
        android:inputType="number" />

    <Button
        android:id="@+id/btnAddCar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/lblAddCar"
        android:layout_toEndOf="@+id/etCarModel"
        android:background="@drawable/car"
        android:text="@string/add_new_car" />
</RelativeLayout>