<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/etBookSearcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btnSearchBook"
        android:ems="10"
        android:hint="@string/search_user"
        android:inputType="textPersonName"
        android:text="manroopsingh" />

    <Button
        android:id="@+id/btnSearchBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:onClick="SearchUser"
        android:text="@string/search" />

    <ImageView
        android:id="@+id/ivUserProfileImg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etBookSearcher"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etBookSearcher"
        android:layout_toEndOf="@+id/ivUserProfileImg"
        android:text="manroopsingh"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/lblLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUserName"
        android:layout_toEndOf="@+id/ivUserProfileImg"
        android:text="Location: " />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblLocation"
        android:layout_toEndOf="@+id/ivUserProfileImg"
        android:text="Santa Clara, California"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/lblHire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLocation"
        android:layout_toEndOf="@+id/ivUserProfileImg"
        android:text="Hirable:" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLocation"
        android:layout_toEndOf="@+id/lblHire"
        android:text="@android:string/yes" />

    <TextView
        android:id="@+id/lblTotalRepos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblHire"
        android:layout_toEndOf="@+id/ivUserProfileImg"
        android:text="Repositories: " />

    <TextView
        android:id="@+id/tvNmbrRepo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblHire"
        android:layout_toEndOf="@+id/lblTotalRepos"
        android:text="39" />

</RelativeLayout>